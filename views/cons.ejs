                    <a class="item"><img class="ui avatar image align-img" src="images/download.jpg">

                    </a>

                    <a href="/logout" class="item">Logout</a>

                </div>
            </div>

        </div>
    </div>

    <div class="ui grid container">
        <div class="eight wide column">
            <h3 class="ui header project-list">Project List</h3>




        </div>
        <div class="two wide column">

            </div>
        <div class="six wide column">
            <h3 class="ui header project-list">Featured Jobs</h3>
        </div>
    </div>

    <div class="ui grid container">
        <div class="ten wide column">
            <%if(jobs.length > 0){%>
            <% jobs.forEach(function(job){ %>
            <div class="ui horizontal segments container-flex inner-b">

                <div class="ui segment item-flex-u">
                    <p class="inner"><%= job.status%></p>

                </div>
                <div class=" ui segment item-flex">
                    <a href="" class="inner-m">
                        <h3 class="ui header"><%= job.title %> </h3>
                        <p class="time-post"> Posted On
                            <%= job.postedon.getDate() %>/<%= job.postedon.getMonth()+1%>/<%= job.postedon.getFullYear()%>
                        </p>
                    </a>
                </div>
                <div class="ui segment item-flex-u">
                    <p class="inner"><%= job.constatus%></p>

                </div>
            </div>
            <% });%>
            <%}else{%>

             <h3>No Job found.</h3>
            <% }%>
        </div>
        <div class="six wide column">
            <div class="ui grid">

                <% featured.forEach(function (f) {

                %>
                <div class="ui card">
                    <div class="content">

                        <div class="header">
                            <%=f.title%>
                        </div>
                        <div class="meta">
                            <h5 class=" ui header client-name">Client:<%f.owner%></h5>
                        </div>
                        <div class="description">
                            <%= f.desc %>
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui two buttons">
                            <div type="button" class="ui basic green button fet" data-value="<%= f._id %>">Accept</div>
                            <div class="ui basic blue button " >View Details</div>
                        </div>
                    </div>

                </div>

                <% })%>
                <script>
                    $('.fet').click(function(){
                        var data = $(this).attr('data-value');

                        $.ajax({
                            url: '/addjob',
                            type: 'post',
                            dataType: 'json',
                            success: function (data) {
                                    window.location.reload();
                            },
                            data: {jid : data}
                        });
                    });
